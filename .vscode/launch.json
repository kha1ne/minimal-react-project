{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "args": ["start"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Launch/Debug in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js",
        "node_modules/**/*.ts",
        "**/*.d.ts"
      ],
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "args": ["test", "--runInBand", "--coverage=false"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "CI": "true",
        "NODE_ENV": "test"
      }
    }
  ]
}