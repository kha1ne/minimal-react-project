{
  "name": "minimal-react-project",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A minimal React + TypeScript project bootstrapped with Vite and Yarn.",
  "main": "src/main.tsx",
  "homepage": "https://github.com/kha1ne/minimal-react-project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kha1ne/minimal-react-project.git"
  },
  "bugs": {
    "url": "https://github.com/kha1ne/minimal-react-project/issues"
  },
  "author": "Marko Maric <mmaric@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "vite",
    "yarn",
    "minimal",
    "frontend",
    "boilerplate",
    "starter"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:check": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose"
  },
  "dependencies": {
    "@lit-labs/react": "^2.1.3",
    "lit": "^3.3.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/eslint-plugin-jsx-a11y": "^6",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "4.0.5",
    "eslint": "^9.38.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.4.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.5"
  },
  "packageManager": "yarn@4.10.3"
}
